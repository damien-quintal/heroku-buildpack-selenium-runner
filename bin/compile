#!/usr/bin/env bash
# bin/compile <build-dir> <cache-dir> <env-dir>

set -o errexit
set -o pipefail
set -o nounset
unset GIT_DIR

function message() {
  echo "-----> $*..."
}

BUILD_DIR=${1:-}
CACHE_DIR=${2:-}
ENV_DIR=${3:-}

cd $BUILD_DIR

message "Starting Selenium"
java -jar -Dwebdriver.chrome.driver=./chromedriver selenium-server-standalone-3.8.0.jar
message "Selenium running!"